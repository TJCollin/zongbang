/* miniprogram/pages/weibo/weibo.wxss */
.weibo-wrapper {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 100%;
}

.loading {
  margin: 20rpx 0;
}

.tab-wrapper {
  border-bottom: 2rpx solid #eeeeee;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.nav-tab {
  display: flex;
  flex-direction: row;
  position: relative;
  width: fit-content;
}

.tab-item {
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  margin: 0;
  width: fit-content;
}

.tab-border {
  left: 30rpx;
  bottom: 0;
  position: absolute;
  width: 108rpx;
  height: 6rpx;
  border-radius: 1rpx;
  background: #f7691c;
  transition: left 0.5s;
}

.tab-border.right {
  left: 198rpx;
}

.list-swiper {
  flex: 1;
}

.scroll-list {
  height: 100%;
}

.hot-item {
  padding: 30rpx 50rpx 30rpx 30rpx;
  white-space: nowrap;
  border-bottom: 2px solid #e6e6e6;
  display: flex;
  align-items: center;  
  justify-content: space-between;
}
.hot-index {
  height: 50rpx;
  width: 50rpx;
}
.hot-title{
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 20rpx;
  flex: 1;
  -o-text-overflow: ellipsis;
}
.hot-icon{
  width: 50rpx;
  height: 50rpx;
}
.hot-star{
  padding-left: 30rpx;
  font-size: small;
  color: #a9a9a9;
}

/* 要闻列表 */
.topic-card {
  width: 100%;
  border-bottom: 2rpx solid #e6e6e6;
  box-sizing: border-box;
}
.topic-card .card-wrap{
  padding: 20px 0;
  margin: 0 24rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
}
.topic-card .card-wrap .img-box {
  width: 110rpx ;
  height: 110rpx;
  flex-shrink: 0;
  background-position: 50%;
  overflow: hidden;
  background-size: 100%;
  margin-right: 20rpx;
}
.topic-card .card-wrap .info-box{
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 0;
}
.topic-card .card-wrap .info-box .desc {
  padding-top: 8rpx;
  line-height: 140%;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
  overflow: hidden;
  color: #666;
}

.topic-card .card-wrap .info-box  .info {
  color: #999999;
}



