/* pages/zhihu/zhihu.wxss */
.zhihu-wrapper {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 100%;
}
/* 顶部导航栏 */
.type-list {
  border-top: 2rpx solid #ebebeb;
  padding: 24rpx 32rpx;
}

.type-list .btn-list {
  display: flex;
  justify-content: space-between;
}

.type-list .btn-list .btn {
  flex-grow: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 32rpx;
  border-radius:  20%/50%;
  color: #808080;
}

.btn.active {
  background-color: #f6f6f6;
}

.loading{
  margin: 20rpx 0;
}

/* 热搜列表 */
.scroll-wrapper {
  flex: 1;
  display: flex;
}

.hot-list-wrapper {
  
  height: 100%;
  box-sizing: border-box;
  flex: 1;
}
.hot-list {
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
}
.hot-list .list-item {
  display: flex;
  flex-direction: row;
  padding: 24rpx 0;
}
.list-item .index-box{
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
  color: #999999;
}
.list-item .index-box.hot {
  color: #FF9607;
}

.list-item .hot-main {
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  margin-left: 16rpx;
}

.hot-main .hot-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.hot-content span {
  color: #8590A6;
  margin-top: 16rpx;
  font-size: 24rpx;
}
.hot-main .img-box{
  width: 190rpx;
  height: 132rpx;
  flex-shrink: 0;
  overflow: hidden;
  background-position: 50%;
  overflow: hidden;
  background-size: 100%;
  background-repeat: no-repeat;
  border-radius: 8rpx;
  margin-left: 16rpx;
}