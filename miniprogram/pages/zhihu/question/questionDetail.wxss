page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title {
  padding: 24rpx 32rpx;
  font-weight: 700;
  font-size: 38rpx;
  background-color: #fff;
}
.loading-box {
  background-color: #fff;
}
.loading {
  margin: 20rpx 0;
}
.card-wrapper {
  padding: 24rpx 0;
}

.card {
  padding: 0 32rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.card .avatar {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.card .avatar .pic {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
}

.card .avatar .name {
  margin-left: 16rpx;
  color: #939393;
}

.card .content .pic-wrapper {
  display: flex;
  padding-bottom: 10rpx;
}

.card .content .pic-wrapper .pic-container {
  flex: 1;
  position: relative;
}
.pic-container:nth-child(n+2) {
  margin-left: 10rpx;
}



.pic-container .img-box {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
  position: relative;
}
.img-box .img {
  position: absolute;
  width: 100%;
  height: 100%;
}

.card .excerpt {
  line-height: 1.5;
}

.card .detail {
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #939393;
}

.wxParse-img.lazy {
  display: none;
}

.wxParse-img {
  width: 50%;
  height: 50%;
  margin: 0 auto;
}